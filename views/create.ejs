<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs'); %>
<body>
   <%- include('./partials/navbar.ejs'); %>
    <div class="container">
        <div class="row">
            <div class="col-md-12 my-4">
                <h3>Create Article</h3>
            </div>
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/blog" method="POST">
                            <div class="form-row">
                                <label for="title">Title</label>
                                <input type="text" name="title" id="title" class="form-control">
                            </div>
                            <div class="form-row">
                                <label for="title">Snippet</label>
                                <input type="text" name="snippet" id="snippet" class="form-control">
                            </div>
                            <div class="form-row">
                                <label for="title">Body</label>
                                <textarea type="text" name="body" id="body" class="form-control"></textarea>
                            </div>
                            <div class="form-row">
                                <button class="btn btn-primary btn-sm my-2 col-md-12" type="submit">Create Article</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs'); %>
</body>
</html>